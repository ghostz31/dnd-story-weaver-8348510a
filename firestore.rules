rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // === Règles de sécurité Firestore pour le projet Trame ===
    
    // Fonction helper pour vérifier l'authentification
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Fonction helper pour vérifier que l'utilisateur accède à ses propres données
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // === Données utilisateur ===
    // Permet à un utilisateur authentifié d'accéder uniquement à ses propres données
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Sous-collections de l'utilisateur
      match /parties/{partyId} {
        allow read, write: if isOwner(userId);
      }
      
      match /encounters/{encounterId} {
        allow read, write: if isOwner(userId);
      }
      
      match /monsters/{monsterId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // === Collection globale de monstres (lecture seule pour les authentifiés) ===
    match /monsters/{monsterId} {
      allow read: if isAuthenticated();
      // Écriture restreinte aux admins uniquement (à configurer via Custom Claims)
      allow write: if isAuthenticated() && request.auth.token.admin == true;
    }
    
    // === Bloquer tout accès non défini ===
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
